@import 'prism/themes/prism-twilight.css'
// Check out "bower_components/prism/themes/" for available themes


h1, h2 {
	color: #000;
}
.bespoke-parent{
	background: #000;	
}
.bespoke-slide{
	background: #fff;
}
.bespoke-progress-parent{
	height: 12px;
}
footer{
	position: absolute;
	bottom: 4px;
}
footer a{
	color: #0089F3;
}
pre {
	max-width:100%;
}
pre[class*="language-"].small-text, pre[class*="language-"].small-text>code {
	font-size:.7em;
	line-height: 0.7 !important;
}
.img_wrapper{
    max-width: 100%;
    height: 100%; 
}
.img_wrapper img {
    border: 2px solid;
    border-radius: 3px;
    max-width: 100%;
    max-height: 100%;
}
li.no-num {
    list-style: none;
}
footer>a>i.fa {
    margin-left: 4px;
}
abbr[title] {
	cursor: help;
	border-bottom: 1px dotted;
	font-weight: 700;
	padding-left: 2px;
	padding-right: 2px;
}
table {
	font-size: .7em;
}
table tr:nth-child(even) td {
    background-color: #eee;
}
table tr:nth-child(odd) td {
    background-color: #fff;
}
table th {
    color: white;
    background-color: black;
}
table tr th.no-fill, table tr td.no-fill {
    background: none !important;
    color: #236BE6 !important;
    font-size: .8em;
    text-align: left;
    padding-left: 2px;
    font-style: italic;
}
.uppercase{
    text-transform: uppercase;
}